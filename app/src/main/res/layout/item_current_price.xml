<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_dish_type">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清蒸鲈鱼"
            android:textSize="@dimen/sp_26"
            android:textColor="@color/color_222222"
            android:layout_marginTop="@dimen/px_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑鱼"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/color_999999"
            android:layout_marginTop="@dimen/px_30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥99.00/斤"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/color_666666"
            android:layout_marginTop="@dimen/px_16"
            android:layout_marginBottom="@dimen/px_12"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_table_selected"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/px_16"
        android:layout_marginRight="@dimen/px_10"/>

</FrameLayout>