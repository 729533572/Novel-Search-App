    <!--选中状态-->
    <RadioButton
        android:id="@+id/rb_table_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_14"
        android:layout_marginTop="@dimen/px_10"
        android:button="@null"
        android:drawableRight="@drawable/rb_table_selector"
        android:textColor="@color/color_333333" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_40"
        android:layout_marginTop="@dimen/px_42"
        android:gravity="center"
        android:text="￥188.88"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:id="@+id/tv_table_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_40"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="文雅阁"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_24" />
    <!--人数-->

    <TextView
        android:id="@+id/tv_make_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_money"
        android:layout_marginRight="@dimen/px_14"
        android:gravity="center"
        android:text="16:45"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money"
        android:layout_marginLeft="@dimen/px_14"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_40"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_40"
            android:gravity="center"
            android:text="/12人"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

