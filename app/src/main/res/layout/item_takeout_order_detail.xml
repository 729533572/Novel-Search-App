<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_header_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_14"
        android:layout_marginTop="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:text="14：00下单菜品（10项）"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_12"
        android:layout_marginTop="@dimen/px_16"
        android:paddingLeft="@dimen/px_20">


        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/px_22" />

        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingRight="@dimen/px_40"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px_22" />

        <TextView
            android:id="@+id/tv_quanlity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/px_20"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px_22" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_14"
        android:paddingLeft="@dimen/px_20"
        android:text="注：不要辣椒"
        android:visibility="gone"
        android:textColor="@color/color_eb6247"
        android:textSize="@dimen/sp_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_e6e5e5"></View>
</LinearLayout>