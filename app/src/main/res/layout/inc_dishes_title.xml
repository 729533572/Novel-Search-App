<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_70"
    android:orientation="horizontal"
    android:background="@drawable/bg_dishes_title">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_dishes_back"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"/>

    <TextView
        android:id="@+id/tv_dishes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="@dimen/sp_26"
        android:textColor="@color/color_FFFFFF"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/iv_update"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_dishes_update"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_22"/>

    <ImageView
        android:id="@+id/iv_delete_no_order_dishes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_dishes_delete"
        android:layout_toLeftOf="@+id/iv_update"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"/>

</RelativeLayout>