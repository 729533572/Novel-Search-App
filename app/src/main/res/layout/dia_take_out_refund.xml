<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px_580"
    android:layout_height="@dimen/px_920"
    android:background="@color/sr_window_background">

    <LinearLayout
        android:id="@+id/title_takeout_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_24"
                android:gravity="center"
                android:text="@string/take_out_refund"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_30" />

            <ImageButton
                android:id="@+id/ib_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_27"
                android:background="@drawable/ic_close"
                android:padding="10dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_c4c4c4" />

        <com.yonyou.hhtpos.widgets.FiltrationView
            android:id="@+id/fv_refund_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_12">
        </com.yonyou.hhtpos.widgets.FiltrationView>

        <LinearLayout
            android:id="@+id/ll_refund_reason"
            android:layout_width="@dimen/px_620"
            android:layout_height="@dimen/px_100"
            android:layout_marginTop="@dimen/px_60"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:orientation="vertical"
            android:background="@drawable/bg_gray_side_gray">
            <EditText
                android:id="@+id/et_enter_refund_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_70"
                android:hint="@string/please_enter_other_reasons"
                android:textColorHint="@color/color_cccccc"
                android:paddingRight="@dimen/px_12"
                android:paddingTop="@dimen/px_12"
                android:paddingLeft="@dimen/px_12"
                android:gravity="top"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/color_222222"
                android:clickable="true"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_30"
                android:layout_marginRight ="@dimen/px_10"
                android:text="0/20"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/color_999999"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>

    <RadioButton
        android:id="@+id/rb_confirm_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/px_70"
        android:background="@color/color_fe563b"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:padding="@dimen/px_20"
        android:text="@string/confirm_refund"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_28" />
</RelativeLayout>

