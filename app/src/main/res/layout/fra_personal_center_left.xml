<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mine"
    android:orientation="vertical">

    <com.yonyou.hhtpos.widgets.CircleImageView
        android:id="@+id/cir_user_head_image"
        android:layout_width="@dimen/px_130"
        android:layout_height="@dimen/px_130"
        android:layout_marginLeft="@dimen/px_276"
        android:layout_marginTop="@dimen/px_6"
        android:src="@drawable/ic_mine_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/px_230"
            android:layout_height="@dimen/px_60"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/px_40"
            android:background="@drawable/bg_order_accept"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="@color/color_eb6247"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/tv_service_hot_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/px_15"
            android:text="@string/service_hot_line"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/tv_service_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/service_provider"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_22" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cir_user_head_image"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/px_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_employee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="阿狸"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employee_number"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:id="@+id/tv_employee_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_3"
                android:text="9999"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/px_16"
            android:background="@color/color_e9e9e9" />

        <RelativeLayout
            android:id="@+id/rl_pass_work"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_84">

            <View
                android:id="@+id/im_left_pass_work"
                android:layout_width="@dimen/px_8"
                android:layout_height="match_parent"
                android:background="@color/color_fe563b"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:drawableLeft="@drawable/ic_pass_work"
                android:drawablePadding="@dimen/px_22"
                android:gravity="center"
                android:text="@string/pass_work"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_26" />

            <TextView
                android:id="@+id/dish_market"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_30"
                android:drawablePadding="@dimen/px_20"
                android:drawableRight="@drawable/ic_right_arrow_mine"
                android:gravity="center"
                android:text="晚市(2017-05-09)"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_20"
            android:background="@color/color_d5d5d5" />

        <RelativeLayout
            android:id="@+id/rl_modify_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_84">

            <View
                android:id="@+id/im_left_modify_password"
                android:layout_width="@dimen/px_8"
                android:layout_height="match_parent"
                android:background="@color/color_fe563b"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_30"
                android:gravity="center"
                android:src="@drawable/ic_right_arrow_mine" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/px_20"
                android:drawableLeft="@drawable/ic_modify_password"
                android:drawablePadding="@dimen/px_22"
                android:gravity="center"
                android:text="@string/modify_password"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_26" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_20"
            android:background="@color/color_d5d5d5" />

        <RelativeLayout
            android:id="@+id/rl_daily_settle_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_84">

            <View
                android:id="@+id/im_left_daily_settle_account"
                android:layout_width="@dimen/px_8"
                android:layout_height="match_parent"
                android:background="@color/color_fe563b"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:drawableLeft="@drawable/ic_daily_settle_account"
                android:drawablePadding="@dimen/px_22"
                android:gravity="center"
                android:text="@string/daily_settle_account"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_26" />

            <TextView
                android:id="@+id/tv_settle_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_30"
                android:drawablePadding="@dimen/px_20"
                android:drawableRight="@drawable/ic_right_arrow_mine"
                android:gravity="center"
                android:text="1天未结"
                android:textColor="@color/color_eb6247"
                android:textSize="@dimen/sp_22" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_20"
            android:background="@color/color_d5d5d5" />

        <RelativeLayout
            android:id="@+id/rl_open_cash_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_84">

            <View
                android:id="@+id/im_left_open_cash_box"
                android:layout_width="@dimen/px_8"
                android:layout_height="match_parent"
                android:background="@color/color_fe563b"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:drawableLeft="@drawable/ic_open_cash_box"
                android:drawablePadding="@dimen/px_22"
                android:gravity="center"
                android:text="@string/open_cash_box"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_26" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_30"
                android:gravity="center"
                android:src="@drawable/ic_right_arrow_mine" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_20"
            android:background="@color/color_d5d5d5" />
    </LinearLayout>

</RelativeLayout>
