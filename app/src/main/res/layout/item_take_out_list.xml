<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_112"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_111"
        android:background="@color/color_FFFFFF">

        <View
            android:id="@+id/v_left_line"
            android:layout_width="@dimen/px_8"
            android:layout_height="@dimen/px_111"
            android:background="@color/color_eb6247"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_30"
            android:text="No.0001"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="¥129.00"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_28" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_16"
            android:layout_marginRight="@dimen/px_30"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结清"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_18"
                android:text="17:31"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_24" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/color_d5d5d5" />

</LinearLayout>


