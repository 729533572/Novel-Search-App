<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e9e9e9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/px_20"
        android:background="@drawable/bg_take_out_list"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_70"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_20"
                android:src="@drawable/ic_search" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="按手机号查找订单"
                android:textColor="@color/color_cccccc"
                android:textSize="@dimen/sp_26" />

            <View
                android:layout_width="@dimen/px_4"
                android:layout_height="@dimen/px_70"
                android:background="@color/color_e9e9e9" />

            <LinearLayout
                android:layout_width="@dimen/px_200"
                android:layout_height="@dimen/px_70"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_filter"
                    android:drawablePadding="@dimen/px_20"
                    android:text="@string/multiple_select"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_26" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_e4e4e4" />

        <com.yonyou.hhtpos.widgets.PagerSlidingTabStrip
            android:id="@+id/psts_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:background="#FFFFFF"
            app:pstsDividerColor="@color/color_e3e3e5"
            app:pstsDividerWidth="@dimen/px_2"
            app:pstsIndicatorPadding="@dimen/px_36"
            app:pstsTabTextSize="@dimen/sp_26" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_e4e4e4" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_take_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_20"></android.support.v4.view.ViewPager>

    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="@dimen/px_1"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_gravity="right"-->
    <!--android:background="@color/color_d5d5d5" />-->

    <ImageView
        android:id="@+id/iv_take_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="@dimen/px_52"
        android:layout_marginRight="@dimen/px_44"
        android:src="@drawable/ic_take_out" />
</FrameLayout>
