<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_590"
    android:layout_height="@dimen/px_830"
    android:orientation="vertical"
    android:id="@+id/rl_content"
    android:background="@color/color_FFFFFF">
    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:orientation="horizontal"
        android:background="@color/color_ededed">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multiple_select"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/px_24"
            android:layout_marginBottom="@dimen/px_24"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close"
            android:layout_marginTop="@dimen/px_27"
            android:layout_marginLeft="@dimen/px_20"
            android:padding="10dp"
            android:layout_gravity="left"/>
    </FrameLayout>
    <com.yonyou.hhtpos.widgets.MultipleSelectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msv_takeout_type"
        android:layout_below="@+id/fl_title"
        android:layout_marginLeft="@dimen/px_20">
    </com.yonyou.hhtpos.widgets.MultipleSelectView>
    <com.yonyou.hhtpos.widgets.MultipleSelectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msv_takeout_market"
        android:layout_below="@+id/msv_takeout_type"
        android:layout_marginLeft="@dimen/px_20">
    </com.yonyou.hhtpos.widgets.MultipleSelectView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/btn_reset"
            android:layout_alignBottom="@+id/rl_content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_90"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@color/color_38383e"
            android:text="@string/reset"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/px_30"/>

        <RadioButton
            android:id="@+id/btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_90"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/finish"
            android:background="@color/color_eb6247"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/px_30"/>
    </LinearLayout>
</RelativeLayout>

