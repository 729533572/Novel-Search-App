<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ededed">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px_30"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:paddingTop="@dimen/px_30"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/string_coupon"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/tv_total_record_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/tv_title"
            android:text="(4)"
            android:textColor="@color/color_eb6247"
            android:textSize="@dimen/sp_28" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_coupon_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFFFFF"
        android:divider="#00000000"
        android:dividerHeight="@dimen/px_20"
        android:numColumns="2"
        android:scrollbars="none"></ListView>
</LinearLayout>