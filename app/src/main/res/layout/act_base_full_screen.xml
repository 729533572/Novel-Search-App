<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_full_screen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/default_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textColor="@color/color_FFFFFF"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_exit"
        android:drawablePadding="8dp"
        android:padding="25dp"
        android:layout_marginRight="15dp"
        android:onClick="onActionFinish"/>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp">
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_server_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务模式：云端服务"
            android:textSize="10sp"
            android:textColor="@color/color_666666"/>

        <TextView
            android:id="@+id/tv_hot_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务热线：400-0000-0000"
            android:textSize="10sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用版本：V1.0.1"
            android:textSize="10sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

</RelativeLayout>