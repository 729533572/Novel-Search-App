<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yesterday"
                android:layout_width="@dimen/px_205"
                android:layout_height="@dimen/px_70"
                android:gravity="center"
                android:text="前一天"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/px_248"
                android:layout_height="@dimen/px_70"
                android:background="@color/color_eb6247"
                android:gravity="center"
                android:text="2017-05-17"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_28" />

            <TextView
                android:id="@+id/tv_tomorrow"
                android:layout_width="@dimen/px_205"
                android:layout_height="@dimen/px_70"
                android:gravity="center"
                android:text="后一天"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <View
                android:layout_width="@dimen/px_4"
                android:layout_height="@dimen/px_70"
                android:background="@color/color_e9e9e9" />

            <LinearLayout
                android:layout_width="@dimen/px_200"
                android:layout_height="@dimen/px_70"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_26"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="@dimen/px_22"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_4"
            android:background="@color/color_e4e4e4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yonyou.hhtpos.widgets.PagerSlidingTabStrip
                android:id="@+id/psts_tab"
                android:layout_width="@dimen/px_658"
                android:layout_height="@dimen/px_70"
                app:pstsIndicatorPadding="@dimen/px_36"
                app:pstsDividerColor="@color/color_e3e3e5"
                app:pstsDividerWidth = "@dimen/px_2"
                app:pstsTabTextSize = "@dimen/sp_26"
                android:background="#FFFFFF" />

            <View
                android:layout_width="@dimen/px_4"
                android:layout_height="@dimen/px_70"
                android:background="@color/color_e9e9e9" />

            <LinearLayout
                android:layout_width="@dimen/px_200"
                android:layout_height="@dimen/px_70"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_26"
                    android:drawableLeft="@drawable/ic_filter"
                    android:drawablePadding="@dimen/px_22"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_e4e4e4" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="@dimen/px_52"
        android:layout_marginRight="@dimen/px_44"
        android:src="@drawable/ic_book"/>

    <View
        android:layout_width="@dimen/px_1"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/color_d5d5d5"/>
</FrameLayout>
