<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_330"
        android:background="@drawable/bg_upgrade"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_bottom_radius_4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有新版本，马上更新"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/color_333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_40"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_64"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/px_220"
                android:layout_height="@dimen/px_60"
                android:text="放弃"
                android:textSize="@dimen/sp_26"
                android:textColor="@color/color_666666"
                android:background="@drawable/bg_white_side_b2_radius_30"
                android:gravity="center"/>

            <TextView
                android:layout_width="@dimen/px_220"
                android:layout_height="@dimen/px_60"
                android:layout_marginLeft="@dimen/px_40"
                android:text="马上更新"
                android:textSize="@dimen/sp_26"
                android:textColor="@color/color_eb6247"
                android:gravity="center"
                android:background="@drawable/bg_white_side_eb_radius_30"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>