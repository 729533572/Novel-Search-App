<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_840"
    android:layout_height="@dimen/px_520"
    android:background="@color/sr_window_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_24"
                android:gravity="center"
                android:text="@string/choose_cash_type"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_30" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_27"
                android:src="@drawable/ic_close" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_c4c4c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_30"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_cash_type"
                android:layout_width="@dimen/px_780"
                android:layout_height="@dimen/px_310"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginLeft="@dimen/px_10"
                android:layout_marginRight="@dimen/px_10"
                android:background="#d9d9d9"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="@dimen/px_12"
                android:paddingTop="@dimen/px_20">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rb_next_step_bg_checked"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/px_28" />
</RelativeLayout>

