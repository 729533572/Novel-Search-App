<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px_600"
    android:layout_height="@dimen/px_508"
    android:background="@drawable/bg_ffffff_4">

    <LinearLayout
        android:id="@+id/title_takeout_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_24"
                android:gravity="center"
                android:text="@string/added_value_rax_invoice"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_30" />

            <ImageButton
                android:id="@+id/ib_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_27"
                android:background="@drawable/ic_close"
                android:padding="10dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_c4c4c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/px_42">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="@string/rax_id"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_24"/>
            <TextView
                android:id="@+id/tv_rax_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px_10"
                android:text="0000000000#"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_refund_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoice_title"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24"/>
            <EditText
                android:id="@+id/et_invoice_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_130"
                android:hint="@string/enter_invoice_title"
                android:textColorHint="@color/color_cccccc"
                android:layout_marginTop="@dimen/px_16"
                android:paddingRight="@dimen/px_12"
                android:paddingTop="@dimen/px_12"
                android:paddingLeft="@dimen/px_12"
                android:gravity="top"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/color_222222"
                android:clickable="true"
                android:background="@drawable/bg_d8d8d8_4"/>

        </LinearLayout>
    </LinearLayout>

    <RadioButton
        android:id="@+id/rb_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/px_70"
        android:background="@drawable/rb_order_dish_bg"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:padding="@dimen/px_20"
        android:text="@string/save"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_28" />
</RelativeLayout>

