<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_250"
    android:layout_height="@dimen/px_110"
    android:layout_marginRight="@dimen/px_20"
    android:layout_marginBottom="@dimen/px_20"
    android:background="@drawable/bg_gray_4">

    <LinearLayout
        android:id="@+id/ll_set_meal_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dish_type"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_14"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dish_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/big_part"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_28" />
            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="麻辣皮皮虾"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_28" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_14"
            android:layout_marginTop="@dimen/px_14"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_add_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_price"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_4"
                    android:text="@string/RMB_symbol"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_add_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_10"
                    android:text="56.00"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_dish_count_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限点一份"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_dish_select"
        android:background="@drawable/ic_table_selected"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:visibility="gone" />
</RelativeLayout>