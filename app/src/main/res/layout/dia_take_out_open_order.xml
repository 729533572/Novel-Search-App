<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px_580"
    android:layout_height="@dimen/px_920"
    android:background="@color/sr_window_background">

    <LinearLayout
        android:id="@+id/title_content_open_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_24"
                android:gravity="center"
                android:text="@string/take_out_open_order"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_30" />

            <ImageButton
                android:id="@+id/ib_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_27"
                android:background="@drawable/ic_close"
                android:padding="10dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_c4c4c4" />

        <com.yonyou.hhtpos.widgets.FiltrationView
            android:id="@+id/fv_order_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20">
        </com.yonyou.hhtpos.widgets.FiltrationView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rb_confirm_open_order"
        android:layout_below="@+id/title_content_open_order"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_content_open_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:text="@string/name"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <EditText
                android:id="@+id/et_enter_receiver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_side_gray"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="@string/hint_enter_receiver_name"
                android:padding="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:text="@string/phone"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <EditText
                android:id="@+id/et_enter_receiver_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_side_gray"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="@string/hint_enter_receiver_phone"
                android:padding="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:text="@string/address"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <EditText
                android:id="@+id/et_enter_receiver_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_side_gray"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="@string/hint_enter_receiver_address"
                android:minLines="2"
                android:padding="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:text="@string/dinner_number"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <EditText
                android:id="@+id/et_dinner_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_side_gray"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="@string/hint_enter_dinner_number"
                android:padding="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_16"
                android:text="@string/deliver_time"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <RadioGroup
                android:id="@+id/rg_deliver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                android:layout_marginTop="@dimen/px_10"
                android:background="@drawable/bg_side_gray_d8_4"
                android:orientation="horizontal"
                android:padding="@dimen/px_4">

                <RadioButton
                    android:id="@+id/rb_reserve_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_deliver_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/px_12"
                    android:text="@string/reserve_deliver_time"
                    android:textColor="@drawable/text_color_sex_selector"
                    android:textSize="@dimen/px_22" />

                <RadioButton
                    android:id="@+id/rb_right_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_deliver_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="@dimen/px_12"
                    android:text="@string/deliver_dinner_right_now"
                    android:textColor="@drawable/text_color_sex_selector"
                    android:textSize="@dimen/px_22" />
            </RadioGroup>

            <EditText
                android:id="@+id/et_select_deliver_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_50"
                android:layout_below="@+id/ll_content_open_order"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_side_gray"
                android:clickable="true"
                android:drawableRight="@drawable/ic_select"
                android:gravity="center_vertical"
                android:hint="@string/please_select_deliver_time"
                android:paddingLeft="@dimen/px_10"
                android:paddingRight="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

    <RadioButton
        android:id="@+id/rb_confirm_open_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_fe563b"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:padding="@dimen/px_20"
        android:text="@string/confirm"
        android:textColor="@drawable/rb_next_step_txt"
        android:textSize="@dimen/sp_28" />
</RelativeLayout>

