<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_950"
    android:layout_height="@dimen/px_80"
    android:background="@color/color_FFFFFF"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_settle_account_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_4"
        android:padding="@dimen/px_20"
        android:text="2017-05-31 8:00~20:00"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_28" />

    <TextView
        android:id="@+id/tv_settle_account_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="我要结算"
        android:padding="@dimen/px_20"
        android:textColor="@color/color_45acfb"
        android:textSize="@dimen/sp_26"/>

    <View
        android:id="@+id/iv_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/tv_settle_account_time"
        android:background="@color/color_d8d8d8" />

</RelativeLayout>