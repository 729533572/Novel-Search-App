<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_140"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_34"
                android:layout_marginTop="@dimen/px_34"
                android:drawableLeft="@drawable/ic_recommend"
                android:drawablePadding="@dimen/px_8"
                android:text="推荐"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>

        <View
            android:id="@+id/right_line"
            android:layout_width="@dimen/px_6"
            android:layout_height="@dimen/px_70"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:background="@color/color_eb6247"
            android:visibility="gone" />
    </RelativeLayout>


    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/px_1"-->
    <!--android:background="@color/color_e9e9e9"></View>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_4"
        android:background="@drawable/bg_gradient_top_fb_c6" />

    <com.yonyou.hhtpos.widgets.RightListView
        android:id="@+id/rightListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></com.yonyou.hhtpos.widgets.RightListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_4"
        android:background="@drawable/bg_gradient_bottom_c6_fb" />

    <LinearLayout
        android:id="@+id/ll_bottom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/px_34"
            android:layout_marginTop="@dimen/px_34"
            android:background="@color/color_FFFFFF"
            android:drawableLeft="@drawable/ic_temp_clock"
            android:drawablePadding="@dimen/px_8"
            android:text="临时菜"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_22" />

    </LinearLayout>


</LinearLayout>