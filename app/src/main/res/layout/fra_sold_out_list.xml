<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px_140"
            android:layout_height="wrap_content"
            android:text="@string/the_day_before"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/color_222222"
            android:paddingTop="@dimen/px_26"
            android:paddingBottom="@dimen/px_26"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2017-05-17"
            android:textSize="@dimen/sp_26"
            android:textColor="@color/color_FFFFFF"
            android:background="@color/color_eb6247"/>

        <TextView
            android:layout_width="@dimen/px_140"
            android:layout_height="wrap_content"
            android:text="@string/the_day_after"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/color_222222"
            android:paddingTop="@dimen/px_26"
            android:paddingBottom="@dimen/px_26"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_e9e9e9"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:paddingTop="@dimen/px_18"
        android:paddingBottom="@dimen/px_18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish_name"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/color_999999"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surplus_quantity"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/color_999999" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_sold_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null">
    </ListView>

</LinearLayout>