<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF">

    <View
        android:id="@+id/v_left_line"
        android:layout_width="@dimen/px_8"
        android:layout_height="@dimen/px_115"
        android:background="@color/color_eb6247"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_book_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/sp_30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_30"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_book_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_book_number"
        android:layout_marginLeft="@dimen/px_74"
        android:layout_marginTop="@dimen/px_14"
        android:text="2017-05-30 17:20"
        android:textSize="@dimen/sp_26"
        android:textColor="@color/color_222222"/>

    <TextView
        android:id="@+id/tv_book_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_24"
        android:text="135****2390"
        android:layout_alignLeft="@+id/tv_book_time"
        android:layout_below="@+id/tv_book_time"
        android:layout_marginTop="@dimen/px_18"/>

    <View
        android:id="@+id/v_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_d5d5d5"
        android:layout_below="@+id/tv_book_phone"
        android:layout_marginTop="@dimen/px_14"
        android:layout_marginLeft="@dimen/px_30"/>

    <TextView
        android:id="@+id/tv_book_people_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12人"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_24"
        android:layout_alignBottom="@+id/tv_book_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_20"/>

    <TextView
        android:id="@+id/tv_book_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="只要包房"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_24"
        android:layout_alignBottom="@+id/tv_book_phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_20"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrived"
        android:layout_toRightOf="@+id/tv_book_time"
        android:layout_marginLeft="@dimen/px_14"
        android:layout_marginTop="@dimen/px_14"/>

</RelativeLayout>