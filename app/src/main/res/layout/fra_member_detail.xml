<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e9e9e9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginTop="@dimen/px_80"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical">
        <!--交易记录-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_46"
            android:layout_marginTop="@dimen/px_142"
            android:background="@color/color_f3f3f3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_24"
                android:text="入会时间"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2017-07-07"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/tv_check_transaction_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/px_32"
                android:drawableRight="@drawable/ic_red_arrow_right"
                android:paddingRight="@dimen/px_20"
                android:text="查看交易记录"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>
        <!--会员余额和优惠券信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_46"
            android:layout_marginTop="@dimen/px_30"
            android:background="@drawable/bg_grey_side_d5_0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30000.00"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_34" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（余额）元"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/px_20"
                        android:text="去充值"
                        android:textColor="@color/color_45acfb"
                        android:textSize="@dimen/sp_20" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@color/color_d5d5d5"></View>
            <!--积分-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8888"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_34" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_16"
                    android:text="积分"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_20" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@color/color_d5d5d5"></View>
            <!--优惠券-->
            <LinearLayout
                android:id="@+id/ll_coupon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/color_eb6247"
                    android:textSize="@dimen/sp_34" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_16"
                    android:text="优惠券"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_20" />

            </LinearLayout>

        </LinearLayout>
        <!--基本信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_46"
            android:orientation="vertical">
            <!--性别-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_member_info_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别：" />

                <TextView
                    style="@style/style_member_info_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="男士" />
            </LinearLayout>
            <!--生日-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_member_info_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日：" />

                <TextView
                    style="@style/style_member_info_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="2017-09-01（阴历）" />
            </LinearLayout>
            <!--邮箱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_member_info_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱：" />

                <TextView
                    style="@style/style_member_info_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="123@.com" />
            </LinearLayout>
            <!--地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_member_info_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址：" />

                <TextView
                    style="@style/style_member_info_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="北京市中关村维亚大厦" />
            </LinearLayout>
            <!--发票抬头-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_member_info_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票抬头：" />

                <TextView
                    style="@style/style_member_info_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="北京市红火台餐饮" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--头像和名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/px_140"
            android:layout_height="@dimen/px_140"
            android:src="@drawable/ic_user_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/px_30"
                android:gravity="center_horizontal"
                android:text="王小米"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_member_name"
                android:drawablePadding="@dimen/px_10"
                android:drawableRight="@drawable/ic_modify_user_info"
                android:text="13877637672"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_26" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginRight="@dimen/px_46"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px_240"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_grey_side_12"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/px_12"
            android:paddingLeft="@dimen/px_36"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_12"
            android:text="@string/string_card_activation"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:layout_width="@dimen/px_240"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:background="@drawable/bg_shape_grey_side_12"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/px_12"
            android:paddingLeft="@dimen/px_36"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_12"
            android:text="@string/string_update_pay_pwd"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:layout_width="@dimen/px_240"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:background="@drawable/bg_shape_red_side_12"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/px_12"
            android:paddingLeft="@dimen/px_36"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_12"
            android:text="@string/string_update_user_info"
            android:textColor="@color/color_eb6247"
            android:textSize="@dimen/sp_28" />
    </LinearLayout>

</RelativeLayout>