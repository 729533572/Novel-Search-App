<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dish_type"
    android:orientation="vertical">
    <!--android:minHeight="@dimen/px_170"-->
    <!--android:minWidth="@dimen/px_276"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px_10"
        android:layout_marginTop="@dimen/px_12"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/empty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_special_side_16"
            android:paddingBottom="@dimen/px_2"
            android:paddingTop="@dimen/px_2"
            android:textColor="@color/color_4ECD60"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_label_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_special_side_16"
            android:paddingBottom="@dimen/px_2"
            android:paddingLeft="@dimen/px_12"
            android:paddingRight="@dimen/px_10"
            android:paddingTop="@dimen/px_2"
            android:textColor="@color/color_4ECD60"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_label_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:background="@drawable/bg_recommend_side_16"
            android:paddingBottom="@dimen/px_2"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:paddingTop="@dimen/px_2"
            android:textColor="@color/color_6893ff"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
        <!--售罄-默认隐藏-与bg_dish_sell_out背景同时出现-->
        <ImageView
            android:id="@+id/iv_sell_out_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:background="@drawable/ic_sell_out"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_12"
        android:layout_marginTop="@dimen/px_14">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_8"
            android:layout_marginTop="@dimen/px_6"
            android:src="@drawable/ic_weighing" />

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_12"
            android:ellipsize="end"
            android:maxLength="20"
            android:maxLines="2"
            android:text="云南杨林酸菜鱼"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_26" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_12"
        android:layout_marginRight="@dimen/px_10"
        android:layout_marginTop="@dimen/px_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="￥88/份"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_22" />
        <!--菜的口味-->
        <TextView
            android:id="@+id/tv_tastes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toRightOf="@+id/tv_dish_price"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_20" />

        <RadioButton
            android:id="@+id/rb_dish_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/color_FFFFFF"
            android:button="@null"
            android:drawableRight="@drawable/rb_table_selector"
            android:gravity="end"
            android:textColor="@color/color_333333"
            android:visibility="gone" />
        <!--<ImageView-->
        <!--android:id="@+id/iv_check"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:src="@drawable/ic_table_selected" />-->
    </RelativeLayout>
</LinearLayout>