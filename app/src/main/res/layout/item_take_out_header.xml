<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_50"
        android:layout_marginLeft="@dimen/px_18"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/px_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="百度1#"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未下单"
            android:textColor="@color/color_eb6247"
            android:textSize="@dimen/px_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_16"
        android:layout_marginLeft="@dimen/px_18"
        android:layout_marginRight="@dimen/px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间："
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="07-06 11:00"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_16"
        android:layout_marginLeft="@dimen/px_18"
        android:layout_marginRight="@dimen/px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计："
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="￥184.00"
            android:textColor="@color/color_eb6247"
            android:textSize="@dimen/sp_24" />
    </LinearLayout>
    <!--实收金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_18"
        android:layout_marginRight="@dimen/px_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实收金额："
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="￥184.00"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_24" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_16"
            android:gravity="end"
            android:text="2017-06-08 11:30"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
    <!--退款金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_18"
        android:layout_marginRight="@dimen/px_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额："
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="￥58.00"
                android:textColor="@color/color_eb6247"
                android:textSize="@dimen/sp_24" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_16"
            android:gravity="end"
            android:text="2017-06-08 11:30"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_36"
        android:layout_marginLeft="@dimen/px_18"
        android:layout_marginRight="@dimen/px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款原因："
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="配送太慢"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_24" />
    </LinearLayout>
</LinearLayout>