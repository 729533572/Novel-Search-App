<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px_898"
    android:layout_height="@dimen/px_865"
    android:layout_marginRight="@dimen/px_30"
    android:background="@drawable/bg_radius_4">

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30"
        android:background="@color/color_FFFFFF"
        android:padding="@dimen/px_20"
        android:src="@drawable/ic_close" />


    <ImageView
        android:id="@+id/iv_set_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_100"
        android:background="@drawable/ic_set_meal" />

    <TextView
        android:id="@+id/tv_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_12"
        android:layout_marginTop="@dimen/px_88"
        android:layout_toRightOf="@+id/iv_set_meal"
        android:text="幸福美满全家福"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/sp_40" />

    <TextView
        android:id="@+id/ib_chief_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_dish_name"
        android:layout_marginBottom="@dimen/px_6"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_toRightOf="@+id/tv_dish_name"
        android:background="@drawable/bg_blue_10"
        android:paddingBottom="@dimen/px_3"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10"
        android:paddingTop="@dimen/px_3"
        android:text="@string/chief_recommend"
        android:textColor="@color/color_45acfb"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/ib_hot_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_dish_name"
        android:layout_marginBottom="@dimen/px_6"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_toRightOf="@+id/ib_chief_recommend"
        android:background="@drawable/bg_green_10"
        android:paddingBottom="@dimen/px_3"
        android:paddingLeft="@dimen/px_15"
        android:paddingRight="@dimen/px_15"
        android:paddingTop="@dimen/px_3"
        android:text="@string/hot_sale"
        android:textColor="@color/color_4ecd60"
        android:textSize="@dimen/sp_14" />


    <LinearLayout
        android:id="@+id/ll_dish_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dish_name"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RMB_symbol"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_3"
            android:text="365.00"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_34" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_set_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_dish_price"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_30"
        android:text="@string/commend_detail_set"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/sp_24" />


    <LinearLayout
        android:layout_width="@dimen/px_670"
        android:layout_height="@dimen/px_446"
        android:layout_below="@+id/tv_set_detail"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30"
        android:background="@color/color_f0f0f0"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_set_meal_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_22"
            android:layout_marginTop="@dimen/px_15">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_finish_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_fe563b_4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px_20"
            android:paddingTop="@dimen/px_20"
            android:text="@string/add_to_order"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/tv_dish_whole_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px_20"
            android:paddingTop="@dimen/px_20"
            android:text="@string/unBracket"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_28" />
    </LinearLayout>


</RelativeLayout>

