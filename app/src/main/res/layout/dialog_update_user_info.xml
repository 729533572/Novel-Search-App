<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px_598"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_side_white_4"
    android:orientation="vertical">


    <include layout="@layout/inc_dialog_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_c4c4c4"></View>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_52"
        android:layout_weight="1"
        android:paddingTop="@dimen/px_28"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                android:text="手机号：13500000000"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_26" />
            <!--顾客姓名-->
            <com.yonyou.hhtpos.widgets.DialogInputView
                android:id="@+id/input_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                app:inputHint="@string/string_input_customer_name"
                app:inputMode="0"
                app:marginLeft="0"
                app:titleText="@string/hint_customer_name" />
            <!--性别-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_16"
                android:text="@string/string_sex"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="@dimen/px_450"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                android:background="@drawable/bg_side_gray_d8_4"
                android:orientation="horizontal"
                android:padding="@dimen/px_4">

                <RadioButton
                    android:id="@+id/rb_man"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_sex_btn_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="@dimen/px_12"
                    android:text="@string/string_man"
                    android:textColor="@drawable/text_color_sex_selector"
                    android:textSize="@dimen/px_22" />

                <RadioButton
                    android:id="@+id/rb_women"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_sex_btn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/px_12"
                    android:text="@string/string_lady"
                    android:textColor="@drawable/text_color_sex_selector"
                    android:textSize="@dimen/px_22" />
            </RadioGroup>
            <!--生日-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_16"
                android:text="@string/string_sex"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/px_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rg_birthday"
                    android:layout_width="@dimen/px_450"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_side_gray_d8_4"
                    android:orientation="horizontal"
                    android:padding="@dimen/px_4">

                    <RadioButton
                        android:id="@+id/rb_lunar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_sex_btn_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:padding="@dimen/px_12"
                        android:text="@string/string_lunar"
                        android:textColor="@drawable/text_color_sex_selector"
                        android:textSize="@dimen/px_22" />

                    <RadioButton
                        android:id="@+id/rb_solar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_sex_btn_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="@dimen/px_12"
                        android:text="@string/string_solar"
                        android:textColor="@drawable/text_color_sex_selector"
                        android:textSize="@dimen/px_22" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginRight="@dimen/px_52"
                    android:drawablePadding="@dimen/px_20"
                    android:drawableRight="@drawable/ic_right_callendar"
                    android:gravity="center_vertical"
                    android:text="2017-07-03"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_22" />
            </LinearLayout>
            <!--邮箱-->
            <com.yonyou.hhtpos.widgets.DialogInputView
                android:id="@+id/input_customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                app:inputHint="@string/hint_input_customer_email"
                app:inputMode="0"
                app:marginLeft="0"
                app:secondTitleText="@string/string_have_choice"
                app:titleText="@string/string_email" />
            <!--联系地址-->
            <com.yonyou.hhtpos.widgets.DialogInputView
                android:id="@+id/input_customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                app:inputHint="@string/hint_input_customer_address"
                app:inputMode="0"
                app:marginLeft="0"
                app:secondTitleText="@string/string_have_choice"
                app:titleText="@string/string_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_16"
                android:text="发票抬头"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_26" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_110"
                android:layout_marginBottom="@dimen/px_50"
                android:layout_marginRight="@dimen/px_50"
                android:background="@drawable/bg_input_edit"
                android:gravity="start"
                android:paddingLeft="@dimen/px_12"
                android:paddingTop="@dimen/px_14"
                android:text="北京市优鼎餐饮管理公司"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_24" />

        </LinearLayout>

    </ScrollView>

    <RadioButton
        android:id="@+id/rb_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rb_next_step_bg"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:padding="@dimen/px_20"
        android:text="@string/save"
        android:textColor="@drawable/rb_next_step_txt"
        android:textSize="@dimen/sp_28" />

</LinearLayout>
