<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px_756"
    android:layout_height="@dimen/px_784"
    android:layout_marginRight="@dimen/px_30"
    android:background="@drawable/bg_radius_4">

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30"
        android:src="@drawable/ic_close"
        android:background="@color/color_FFFFFF"
        android:padding="@dimen/px_20" />

    <TextView
        android:id="@+id/tv_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_88"
        android:text="油麦菜"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/sp_40" />

    <TextView
        android:id="@+id/ib_hot_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_dish_name"
        android:layout_marginBottom="@dimen/px_6"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_toRightOf="@+id/tv_dish_name"
        android:background="@drawable/bg_green_10"
        android:paddingBottom="@dimen/px_3"
        android:paddingLeft="@dimen/px_15"
        android:paddingRight="@dimen/px_15"
        android:paddingTop="@dimen/px_3"
        android:text="@string/hot_sale"
        android:textColor="@color/color_4ecd60"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/ll_dish_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dish_name"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_16"
            android:background="@drawable/ic_vip_price" />

        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:text="@string/RMB_symbol"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_3"
            android:text="22.00"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_34" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dish_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_dish_price"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_34"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_6"
            android:text="@string/hint_dish_count"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_26" />

        <com.yonyou.hhtpos.widgets.ModifyCountView
            android:id="@+id/mcv_dish_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_34">
        </com.yonyou.hhtpos.widgets.ModifyCountView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rb_finish_select"
        android:layout_below="@+id/ll_dish_count"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_dish_cookery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_dish_count"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_6"
                    android:text="@string/hint_dish_cookery"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_26" />

                <com.yonyou.hhtpos.widgets.FiltrationView
                    android:id="@+id/fv_cookery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_34">
                </com.yonyou.hhtpos.widgets.FiltrationView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dish_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_dish_cookery"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_22"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_6"
                    android:text="@string/hint_dish_remark"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_26" />

                <com.yonyou.hhtpos.widgets.MultipleSelectView
                    android:id="@+id/fv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_34">
                </com.yonyou.hhtpos.widgets.MultipleSelectView>
            </LinearLayout>

            <EditText
                android:id="@+id/et_other_remark"
                android:layout_width="@dimen/px_600"
                android:layout_height="@dimen/px_170"
                android:layout_below="@+id/ll_dish_remark"
                android:layout_marginLeft="@dimen/px_123"
                android:layout_marginTop="@dimen/px_15"
                android:background="@drawable/bg_gray_4"
                android:gravity="top"
                android:hint="@string/other_request"
                android:padding="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />
        </LinearLayout>
    </ScrollView>

    <RadioButton
        android:id="@+id/rb_finish_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_rb_radius_4"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:padding="@dimen/px_20"
        android:text="@string/finish"
        android:textColor="@drawable/rb_next_step_txt"
        android:textSize="@dimen/sp_28" />
</RelativeLayout>

