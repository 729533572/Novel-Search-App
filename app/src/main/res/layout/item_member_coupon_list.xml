<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_133">
    <!--@dimen/px_560
  match_parent-->
    <RelativeLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_coupon_cash">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_56"
            android:layout_marginTop="@dimen/px_28"
            android:ems="1"
            android:text="代金券"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_22" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_24"
            android:layout_marginLeft="@dimen/px_156"
            android:text="有效期：2017-10-12"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px_18" />

        <!--兑换券-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_44"
            android:layout_marginTop="@dimen/px_24"
            android:text="汽锅鸡兑换"
            android:textColor="@color/color_8DA9FA"
            android:textSize="@dimen/sp_28" />
        <!--优惠券金额-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/px_6"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/color_FFAA68"
                android:textSize="@dimen/sp_60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_40"
                android:text="元"
                android:textColor="@color/color_FFAA68"
                android:textSize="@dimen/sp_28" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/px_24"
            android:layout_marginRight="@dimen/px_44"
            android:text="满400元可用"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px_18" />
    </RelativeLayout>


</LinearLayout>