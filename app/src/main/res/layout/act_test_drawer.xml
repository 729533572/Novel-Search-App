<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_full_screen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/default_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textColor="@color/color_FFFFFF"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_exit"
        android:drawablePadding="8dp"
        android:padding="25dp"
        android:layout_marginRight="15dp"
        android:onClick="onActionFinish"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="@dimen/px_880"
        android:layout_height="@dimen/px_604"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_150"
        android:orientation="vertical"
        android:background="@color/color_F7F7F7">
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_50"
            android:text="58号花园（苏州街店）"
            android:textSize="@dimen/sp_34"
            android:textColor="@color/color_222222" />
        <EditText
            android:layout_width="@dimen/px_700"
            android:layout_height="@dimen/px_90"
            android:layout_marginTop="@dimen/px_60"
            android:hint="@string/enter_phone"
            android:textColorHint="@color/color_cccccc"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/bg_gray_side_gray"
            android:textSize="@dimen/sp_28"/>
        <EditText
            android:layout_width="@dimen/px_700"
            android:layout_height="@dimen/px_90"
            android:layout_marginTop="@dimen/px_26"
            android:hint="@string/enter_password"
            android:textColorHint="@color/color_cccccc"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/bg_gray_side_gray"
            android:textSize="@dimen/sp_28"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_pwd"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_26"
            android:layout_marginTop="@dimen/px_30"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/px_90"/>
        
        <RadioButton
            android:layout_width="@dimen/px_700"
            android:layout_height="@dimen/px_80"
            android:background="@drawable/rb_next_step_bg_checked"
            android:button="@null"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/px_90"
            android:layout_marginTop="@dimen/px_50"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_32"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_service_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_server_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务模式：云端服务"
            android:textSize="10sp"
            android:textColor="@color/color_666666"/>

        <TextView
            android:id="@+id/tv_hot_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务热线：400-0000-0000"
            android:textSize="10sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用版本：V1.0.1"
            android:textSize="10sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_service_model"
        android:id="@+id/ll_imei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_imei_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equipment_imei"
            android:textSize="10sp"
            android:textColor="@color/color_666666"/>
        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8612 9903 1027 838"
            android:textSize="10sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
</RelativeLayout>