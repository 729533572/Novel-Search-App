<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_content"
    android:background="@color/color_F7F7F7"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px_90"
    android:paddingRight="@dimen/px_90"
    android:paddingTop="@dimen/px_50">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/string_choose_store"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/sp_34" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属企业："
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川海底捞餐饮服务有限公司"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="设备IMEI："
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="8612 9903 1027 838"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/choose_store"
        android:layout_width="@dimen/px_700"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_70"
        android:layout_marginTop="@dimen/px_40"
        android:background="@drawable/bg_white_side_gray_1"
        android:drawableRight="@drawable/ic_choose_store"
        android:gravity="center"
        android:hint="选择门店"
        android:padding="18dp"
        android:paddingRight="@dimen/px_30"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cccccc"
        android:textSize="@dimen/sp_28" />

    <RadioButton
        android:id="@+id/rb_finish"
        android:layout_width="466dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_70"
        android:background="@drawable/rb_next_step_bg"
        android:button="@null"
        android:checked="false"
        android:gravity="center"
        android:padding="16dp"
        android:text="完成"
        android:textColor="@drawable/rb_next_step_txt"
        android:textSize="@dimen/sp_32" />

</LinearLayout>