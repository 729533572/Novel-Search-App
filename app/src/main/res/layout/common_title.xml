<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_80"
    android:background="@color/color_212121"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:padding="@dimen/px_4"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_left_menu" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FFFFFF"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_34"
        android:ellipsize="end"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/px_30"
        android:gravity="center_vertical|right">

        <TextView
            android:id="@+id/tv_business_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晚市"
            android:textColor="@color/color_b5b5b5"
            android:textSize="@dimen/sp_22" />

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="@dimen/px_24"
            android:layout_marginLeft="@dimen/px_16"
            android:layout_marginRight="@dimen/px_16"
            android:background="@color/color_b5b5b5" />

        <TextView
            android:id="@+id/tv_login_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海底捞上地店"
            android:textColor="@color/color_b5b5b5"
            android:textSize="@dimen/sp_22" />

        <ImageView
            android:id="@+id/iv_user_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_64"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_default" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_50">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/ic_msg_bell" />

            <ImageView
                android:id="@+id/iv_red_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="@dimen/px_26"
                android:paddingLeft="@dimen/px_26"
                android:scaleType="fitXY"
                android:src="@drawable/ic_msg_red_point" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>