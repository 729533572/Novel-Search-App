<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_daily_account_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70"
        android:background="@color/color_f3f3f3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/daily_settle_account"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_28" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_body_daily_account"
        android:layout_below="@+id/ll_daily_account_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="@dimen/px_950"
            android:layout_height="@dimen/px_324"
            android:layout_marginTop="@dimen/px_162"
            android:background="@drawable/bg_d8d8d8_4"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lv_daily_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/px_1">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_14"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/more_daily_data"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_22" />
    </LinearLayout>

</RelativeLayout>