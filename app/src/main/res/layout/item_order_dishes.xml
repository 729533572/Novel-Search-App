<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px_20">

    <TextView
        android:id="@+id/tv_header_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_14"
        android:layout_marginTop="@dimen/px_22"
        android:text="14：00点餐"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_22" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/px_10"
                android:layout_marginTop="@dimen/px_1"
                android:src="@drawable/ic_dish_gift" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="松茸汽鸡锅"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/px_22" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="￥88.00"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px_22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/px_24"
            android:text="1份"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px_22" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/px_12"
        android:paddingTop="@dimen/px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中份"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="￥68.00"
            android:textColor="@color/color_eb6247"
            android:textSize="@dimen/px_20" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_e6e5e5"></View>
</LinearLayout>