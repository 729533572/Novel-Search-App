<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_reserve_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_reserve_status"
            android:layout_marginTop="@dimen/px_30"
            android:text="@string/custom_arrive"
            android:textSize="@dimen/sp_26"
            android:textColor="@color/color_222222" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_type"
            android:layout_marginTop="@dimen/px_30"
            android:layout_toRightOf="@+id/tv_order_reserve_status"
            android:text="@string/lunch"
            android:textSize="@dimen/sp_26"
            android:textColor="@color/color_222222"
            android:layout_alignParentRight="true"
            android:gravity="right"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rl_reserve_time"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_32">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_room_time"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_date"
            android:text="2017-06-07"
            android:layout_marginLeft="@dimen/px_24"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_22"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_time"
            android:text="11:30"
            android:layout_marginLeft="@dimen/px_24"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_22"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rl_reserve_contact"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_24">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_room_contact"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_phone"
            android:text="1590000000"
            android:layout_marginLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_22"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_customer_honorific"
            android:text="张总"
            android:layout_marginLeft="@dimen/px_14"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_22"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rl_customer_number"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_24">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_room_customer_number"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_customer_number"
            android:text="4人"
            android:layout_marginLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rl_reserve_remark"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_24">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_room_remark"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reserve_remark"
            android:text="要2个儿童座椅"
            android:layout_marginLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:textColor="@color/color_eb6247"
            android:textSize="@dimen/sp_20"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d5d5d5"
        android:layout_marginTop="@dimen/px_18"/>
</LinearLayout>