<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px_40">

    <com.yonyou.hhtpos.widgets.DialogInputView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputHint="@string/hint_input_discount_percent"
        app:inputMode="0"
        app:marginLeft="0"
        app:marginRight="0"
        app:titleText="@string/string_all_sigle_discount"></com.yonyou.hhtpos.widgets.DialogInputView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_10"
            android:text="@string/string_discount_reason"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店庆活动"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

</LinearLayout>