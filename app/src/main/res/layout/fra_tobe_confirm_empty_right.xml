<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/color_e9e9e9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_book_detail"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_68"
        android:layout_marginRight="@dimen/px_68"
        android:layout_marginBottom="@dimen/px_46">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_258"
            android:src="@drawable/default_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_40"
            android:text="@string/home_company_name"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/home_company_phone"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_34"/>
    </LinearLayout>


</LinearLayout>