<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark">


        <ImageView
            android:id="@+id/iv_user_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_user_default" />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_message" />

        <TextView
            android:id="@+id/tv_message_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/shape_circle_count"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_FFFFFF" />
    </RelativeLayout>

    <com.yonyou.hhtpos.widgets.LeftExpandableView
        android:id="@+id/expandableview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_user"
        android:layout_weight="1"></com.yonyou.hhtpos.widgets.LeftExpandableView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_business_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="晚市"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="58号花园花园"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>