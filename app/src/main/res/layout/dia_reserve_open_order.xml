<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_620"
    android:layout_height="@dimen/px_920"
    android:background="@color/sr_window_background">

    <LinearLayout
        android:id="@+id/ll_content_open_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_850"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_24"
                android:layout_marginTop="@dimen/px_24"
                android:gravity="center"
                android:text="开单（广州厅）"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_30" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_27"
                android:src="@drawable/ic_close" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_c4c4c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px_80"
            android:layout_marginRight="@dimen/px_90"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/hint_user_number"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24"
                android:drawableLeft="@drawable/ic_red_point"
                android:drawablePadding="@dimen/px_6"/>

            <EditText
                android:id="@+id/et_user_number"
                android:layout_width="@dimen/px_450"
                android:layout_height="@dimen/px_50"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_side_gray"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_guests_num"
                android:inputType="number"
                android:paddingLeft="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/hint_user"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="@dimen/px_450"
                android:layout_height="@dimen/px_50"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_side_gray"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="@string/dinner_member_hint"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/hint_waiter"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <EditText
                android:id="@+id/et_waiter"
                android:layout_width="@dimen/px_450"
                android:layout_height="@dimen/px_50"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_side_gray"
                android:focusable="false"
                android:drawableRight="@drawable/ic_select"
                android:gravity="center_vertical"
                android:hint="@string/please_select"
                android:paddingLeft="@dimen/px_10"
                android:paddingRight="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/reserve_order"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <EditText
                android:id="@+id/et_reserve_order_id"
                android:layout_width="@dimen/px_450"
                android:layout_height="@dimen/px_50"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_solid_gray_4"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="@string/reserve_order_id"
                android:paddingLeft="@dimen/px_10"
                android:textColorHint="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:text="@string/dinner_remarks"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_24" />

            <EditText
                android:id="@+id/et_dinner_remark"
                android:layout_width="@dimen/px_450"
                android:layout_height="@dimen/px_110"
                android:layout_marginTop="@dimen/px_14"
                android:background="@drawable/bg_gray_4"
                android:clickable="true"
                android:gravity="top"
                android:hint="@string/dinner_remarks_hint"
                android:maxLength="20"
                android:paddingLeft="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_24" />
        </LinearLayout>
    </LinearLayout>

    <RadioButton
        android:id="@+id/rb_confirm_open_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_70"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_red_4_selector"
        android:button="@null"
        android:gravity="center"
        android:text="@string/confirm_open_order"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/px_28" />
</RelativeLayout>

