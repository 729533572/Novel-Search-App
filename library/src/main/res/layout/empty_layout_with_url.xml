<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_empty_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_276"
        android:src="@drawable/default_book_detail" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginTop="@dimen/px_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系"
            android:textColor="#999999"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1392222222"
            android:textColor="#eb6247"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取更多数据服务"
            android:textColor="#999999"
            android:textSize="@dimen/sp_28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去"
            android:textColor="#222222"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/tv_hyper_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24" />
        <!--红火台餐饮云服务运营平台-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取更多数据服务"
            android:textColor="#222222"
            android:textSize="@dimen/sp_24" />
    </LinearLayout>

</LinearLayout>